{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://multi-agent-ide/schemas/delegation-template.json",
  "title": "DelegationTemplate",
  "description": "Standardized output structure for orchestrator agents",
  "type": "object",
  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of this schema"
    },
    "resultId": {
      "$ref": "context-id.json",
      "description": "ID of this delegation result"
    },
    "upstreamContextId": {
      "$ref": "context-id.json",
      "description": "ID of the upstream context received"
    },
    "goal": {
      "type": "string",
      "minLength": 1,
      "description": "Goal being delegated"
    },
    "delegationRationale": {
      "type": "string",
      "minLength": 1,
      "description": "Rationale for this delegation decomposition"
    },
    "assignments": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/AgentAssignment"
      },
      "description": "Work assignments to sub-agents"
    },
    "contextSelections": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/ContextSelection"
      },
      "description": "Context selected to pass downstream"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "description": "Training metadata"
    }
  },
  "required": [
    "schemaVersion",
    "resultId",
    "upstreamContextId",
    "goal",
    "delegationRationale",
    "assignments",
    "metadata"
  ],
  "$defs": {
    "AgentAssignment": {
      "type": "object",
      "properties": {
        "agentId": {
          "type": "string",
          "minLength": 1
        },
        "agentType": {
          "type": "string"
        },
        "assignedGoal": {
          "type": "string",
          "minLength": 1
        },
        "subdomainFocus": {
          "type": ["string", "null"]
        },
        "contextToPass": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": ["agentId", "agentType", "assignedGoal", "contextToPass"]
    },
    "ContextSelection": {
      "type": "object",
      "properties": {
        "selectionId": {
          "type": "string",
          "minLength": 1
        },
        "sourceContextId": {
          "$ref": "context-id.json"
        },
        "selectedContent": {
          "type": "string",
          "minLength": 1
        },
        "selectionRationale": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["selectionId", "sourceContextId", "selectedContent", "selectionRationale"]
    }
  }
}
